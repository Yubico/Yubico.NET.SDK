{
  "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
  "metadata": [
    {
      "src": [
        {
          "files": ["**/Yubico.Core.csproj"],
          "src": "./Yubico.Core/src/"
        }
      ],
      "disableGitFeatures": true,
      "disableDefaultFilter": false,
      "namespaceLayout": "flattened",
      "memberLayout": "samePage",
      "filter": "./docs/filterConfig.yml",
      "output": "./docs/core-api",
      "properties": { "TargetFramework": "netstandard2.0" }
    },
    {
      "src": [
        {
          "files": ["**/Yubico.YubiKey.csproj"],
          "src": "./Yubico.YubiKey/src/"
        }
      ],
      "disableGitFeatures": true,
      "disableDefaultFilter": false,
      "namespaceLayout": "flattened",
      "memberLayout": "samePage",
      "filter": "./docs/filterConfig.yml",
      "output": "./docs/yubikey-api",
      "properties": { "TargetFramework": "netstandard2.0" }
    }
  ],
  "build": {
    "sitemap": {
      "baseUrl": "https://docs.yubico.com/yesdk",
      "changefreq": "monthly"
    },
    "content": [
      {
        "files": [
          "yubikey-api/**.yml",
          "yubikey-api/index.md",
          "core-api/**.yml",
          "core-api/index.md",
          "users-manual/**.md",
          "users-manual/**/toc.yml",
          "toc.yml",
          "*.md"
        ],
        "src": "./docs/"
      }
    ],
    "resource": [
      {
        "files": ["images/**"],
        "src": "./docs/"
      }
    ],
    "overwrite": [
      {
        "files": ["namespaces/**.md"],
        "exclude": ["obj/**", "_site/**"],
        "src": "./docs/"
      }
    ],
    "output": "./docs/_site/",
    "globalMetadataFiles": [],
    "globalMetadata": {
      "_googleAnalyticsTagId": "6195355",
      "_appFaviconPath": "./images/favicon.ico",
      "_enableSearch": false,
      "_appName" : "Yubico",
      "_lang": "en",
      "_gitContribute": {
        "repo":"https://github.com/Yubico/Yubico.NET.SDK",
        "branch":"develop"
      }
    },
    "fileMetadataFiles": [],
    "template": ["default", "./docs/yubikeysdk-template"],
    "postProcessors": ["ExtractSearchIndex"],
    "disableGitFeatures": false
  }
}
